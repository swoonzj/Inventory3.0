<Window x:Class="Inventory_3._0.Checkout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkout" Height="600" Width="300">
    <Grid>
        <StackPanel>
            <ListBox Name="lbCheckout" Height="300" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <Label FontSize="30" FontWeight="Bold">Total:</Label>
                <Label Name="lblTotal" HorizontalAlignment="Right" FontSize="30"/>
            </StackPanel>
            <TextBox Name="txtCheckout" FontSize="25"/>
            <Button Name="btnCash" Margin="5" FontSize="20" Click="btnCash_Click">Cash</Button>
            <Button Name="btnCredit" Margin="5" FontSize="20" Click="btnCredit_Click">Credit Card</Button>
            <Button Name="btnStoreCredit" Margin="5" FontSize="20" Click="btnStoreCredit_Click">Store Credit</Button>
            <Button Name="btnRewards" Margin="5" FontSize="20" Click="btnRewards_Click">Rewards Points</Button>
        </StackPanel>
    </Grid>
</Window>
