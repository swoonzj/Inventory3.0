<Window x:Class="Inventory_3._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>        
        <ListView Margin="0,0,0,0" Name="lvList" Grid.Column="0" Grid.RowSpan="5" SelectionMode="Multiple">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Margin="2" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=name}"/>
                    <GridViewColumn Header="System" DisplayMemberBinding="{Binding Path=system}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Path=price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Margin="0,0,0,0" Name="lvCart" Grid.Column="2" Grid.RowSpan="4" SelectionMode="Multiple">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Margin="2" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=name}"/>
                    <GridViewColumn Header="System" DisplayMemberBinding="{Binding Path=system}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Path=price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="btnAdd" Margin="20" Grid.Column="1" Click="btnAdd_Click">Add</Button>
        <Button Name="btnRemove" Margin="20" Grid.Column="1" Grid.Row="1" Click="btnRemove_Click">Remove</Button>

        <TextBlock Name="txtTotalCash" FontSize="20" Grid.Column="2" Grid.Row="4" />
        <TextBlock Name="txtTotalCredit" FontSize="20" Grid.Column="2" Grid.Row="4" />
    </Grid>
</Window>
