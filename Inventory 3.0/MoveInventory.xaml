<Window x:Class="Inventory_3._0.MoveInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoveInventory" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="15*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="0">
            <!--Search Bar-->
            <Button  Name="btnClear" Margin="5" Width="20" DockPanel.Dock="Left" HorizontalAlignment="Right" Click="btnClear_Click">X</Button>
            <TextBox Name="txtSearch" Margin="5" FontSize="15" HorizontalAlignment="Stretch" KeyDown="DetectEnterKey" VerticalContentAlignment="Center"/>
        </DockPanel>
        <ListView Margin="0,5,10,5" Name="lvList" Grid.Column="0" Grid.Row="1" Grid.RowSpan="7" SelectionMode="Multiple"  ItemsSource="{Binding searchResults}">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Margin="2" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="System"  DisplayMemberBinding="{Binding Path=system}"/>
                    <GridViewColumn Header="Price"  DisplayMemberBinding="{Binding Path=price, StringFormat=C}"/>
                    <!--<GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Path=quantity}"/>-->
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Name="btnEdit" Height="30" Margin="5,5,5,50">Edit</Button>
            <Button Name="btnAdd" Height="30" Margin="5,5,5,50" Click="btnAdd_Click">Add --></Button>
            <Label FontWeight="Bold" HorizontalAlignment="Center">FROM:</Label>
            <RadioButton Name="radioFromTrade" GroupName="From" Margin="5">New Item</RadioButton>
            <RadioButton Name="radioFromOutBack" GroupName="From" Margin="5">Out Back</RadioButton>
            <RadioButton Name="radioFromStorage" GroupName="From" Margin="5">Storage</RadioButton>
            <RadioButton Name="radioFromSalesFloor" GroupName="From" Margin="5,5,5,50">Sales Floor</RadioButton>
            <Label FontWeight="Bold" HorizontalAlignment="Center">TO:</Label>
            <RadioButton Name="radioToOutBack" GroupName="To" Margin="5">Out Back</RadioButton>
            <RadioButton Name="radioToStorage" GroupName="To" Margin="5">Storage</RadioButton>
            <RadioButton Name="radioToSalesFloor" GroupName="To" Margin="5,5,5,50">Sales Floor</RadioButton>
        </StackPanel>
        <ListView Margin="0,5,10,5" Name="lvMove" Grid.Column="2" Grid.Row="1" Grid.RowSpan="7" SelectionMode="Multiple"  ItemsSource="{Binding searchResults}">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Margin="2" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Path=quantity}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="System"  DisplayMemberBinding="{Binding Path=system}"/>
                    <GridViewColumn Header="Price"  DisplayMemberBinding="{Binding Path=price, StringFormat=C}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
